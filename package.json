{
  "name": "sern-auth-template",
  "version": "1.0.0",
  "description": "Authentication template using MySQL, Express, React, and Node.js.",
  "main": "server.js",
  "scripts": {
    "build": "cd client && npm run build",
    "client": "cd client && npm run start",
    "heroku-postbuild": "npm run build",
    "install": "cd client && npm install",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "start:prod": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NatePad/SERN-Auth-Template.git"
  },
  "keywords": [
    "authentication",
    "template",
    "SERN"
  ],
  "author": "Nathan Sartain",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NatePad/SERN-Auth-Template/issues"
  },
  "homepage": "https://github.com/NatePad/SERN-Auth-Template#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.8",
    "sequelize": "^5.21.10"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
